<!DOCTYPE html>
<html>
  <head>
    <%- include ./partials/header%>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <title><%=title%></title>
  </head>

  <body>
    <%- include ./partials/nav%>

    <div class="four-cards">
      <div class="card-container">
        <div class="card">
          <div class="card-image">
            <img src="/<%=products.productImage%>" alt="ProductImage" />
          </div>
          <div class="card-body">
            <div class="detail">Product Name: <%=products.productName%></div>
            <div class="detail">Price: <%=products.price%></div>
            <div class="detail">Quality: <%=products.quality%></div>
            <div class="detail">Location: <%=products.location%></div>
            <div class="detail">Type: <%=products.type%></div>
            <div class="detail">
              Last Updated: <%= new Date().toDateString()%>
            </div>
          </div>
        </div>
      </div>
    </div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/1.0.2/Chart.min.js"></script>
    <div class="canvas">
      <!-- line chart canvas element -->
      <canvas id="buyers" width="1000" height="400"></canvas>
    </div>

    <script>
      // line chart data
      var buyerData = {
        labels: ["<%=products.location%>"],
        datasets: [
          {
            fillColor: "rgba(172,194,132,0.4)",
            strokeColor: "#ACC26D",
            pointColor: "#fff",
            pointStrokeColor: "#9DB86D",
            data: [
              "<%=products.price%>",
              1000,
              2000,
              4000,
              5000,
              6000,
              7000,
              8000,
              9000
            ]
          }
        ]
      };
      // get line chart canvas
      var buyers = document.getElementById("buyers").getContext("2d");
      // draw line chart
      new Chart(buyers).Bar(buyerData);
    </script>

    <%- include ./partials/extensions%> <%- include ./partials/footer%>
  </body>
</html>
